                <nav class="navbar navbar-light campo-pesquisa" id="areaFiltro">

                    <div class="nomeCampoPesquisa">
                        Filtrar Classificados
                    </div>
                    <div class="areaCamposGrandes">
                        <div class="campoSearch" id="zero-filter">
