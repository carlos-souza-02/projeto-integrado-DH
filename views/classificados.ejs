                                    aria-label="Search">
                            </form>
                        </div>
                        <div class="btn-group" id="first-filter">
                            <button
                                class="btn btn-secondary text-left btn-sm"
                                id="btn-pesquisa"
                                style="width: 100%;"
                                type="button">
                                Categoria
                            </button>
                            <button
                                type="button"
                                class="btn btn-secondary btn-sm dropdown-toggle dropdown-toggle-split"
                                id="btn-pesquisa"
                                style="width: 20%;"
                                data-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Alimentação</a>
                                <a class="dropdown-item" href="#">Assistência</a>
                                <a class="dropdown-item" href="#">Educação</a>
